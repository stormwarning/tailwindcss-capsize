{
	"compilerOptions": {
		// Type Checking
		"strictNullChecks": true,

		// Modules
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"typeRoots": ["./types"],

		// Emit
		"noEmit": true,
		"outDir": "dist",

		// JavaScript Support
		"allowJs": true,
		"checkJs": true,

		// Interop Constraints
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		// Language and Environment
		"target": "esnext",

		// Projects
		"incremental": true,

		// Completeness
		"skipLibCheck": true
	},
	"include": ["__tests__", "src", "types", "*.config.js", "eslint.config.mjs"],
	"exclude": ["node_modules", "dist"]
}
