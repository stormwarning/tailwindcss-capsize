{
  "name": "tailwindcss-capsize",
  "version": "1.2.2",
  "description": "TailwindCSS utility classes for trimming whitespace above & below capital letters.",
  "keywords": [
    "tailwindcss",
    "tailwindcss-plugin",
    "capsize",
    "typography",
    "whitespace"
  ],
  "repository": "stormwarning/tailwindcss-capsize",
  "license": "ISC",
  "author": "Jeff Nelson <rustyangel@gmail.com> (http://tidaltheory.io)",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdx build --format cjs",
    "changeset": "changeset add",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "release": "npm run build && changeset publish",
    "start": "tsdx watch",
    "test": "tsdx test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "package.json": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@capsizecss/core": "^3.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.14.x",
    "@navith/tailwindcss-plugin-author-types": "1.8.1-0.1",
    "@typescript-eslint/eslint-plugin": "4.31.x",
    "@typescript-eslint/parser": "4.31.x",
    "@zazen/eslint-config": "2.3.x",
    "eslint": "7.32.x",
    "eslint-config-standard-with-typescript": "20.0.0",
    "husky": "4.3.x",
    "import-sort-style-python": "1.0.x",
    "jest-diff": "27.2.x",
    "lint-staged": "10.5.x",
    "prettier": "2.2.x",
    "prettier-plugin-import-sort": "0.0.6",
    "prettier-plugin-packagejson": "2.2.x",
    "tailwindcss": "1.9.6",
    "tsdx": "0.14.1",
    "tslib": "2.1.x",
    "typescript": "4.2.x"
  },
  "peerDependencies": {
    "tailwindcss": ">= 1.5"
  },
  "engines": {
    "node": ">=10"
  },
  "importSort": {
    ".js,.ts": {
      "parser": "babylon",
      "style": "python"
    }
  }
}
